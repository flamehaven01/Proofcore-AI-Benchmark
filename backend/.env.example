# ProofCore Backend - Environment Configuration
# Copy this file to .env and fill in your actual values
#
# NOTE: All settings are OPTIONAL for offline-first operation
# Backend is completely optional - ProofCore works as frontend-only

# ============================================
# Application Settings
# ============================================
APP_NAME=ProofCore Backend
APP_VERSION=1.0.2
DEBUG=false

# ============================================
# API Configuration
# ============================================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Key for client authentication
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secure-api-key-here

# ============================================
# Database Configuration
# ============================================
# SQLite (for development)
DATABASE_URL=sqlite+aiosqlite:///./proofbench.db

# PostgreSQL (for production - recommended)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/proofbench

# ============================================
# LLM Provider API Keys
# ============================================
# OPTIONAL: All LLM keys are optional (heuristic fallback available)
# System works perfectly without any API keys (offline mode)
# Provide keys only for enhanced multi-LLM semantic evaluation
# Enable providers by setting ENABLE_LLM_PROVIDERS=true

# OpenAI API Key
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Google AI API Key
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# ============================================
# LLM Configuration
# ============================================
# Request timeout in seconds
LLM_TIMEOUT=30

# Maximum retry attempts for failed requests
LLM_MAX_RETRIES=3

# Offline-first switches
OFFLINE_MODE=true
ENABLE_LLM_PROVIDERS=false

# Default models (optional - uses provider defaults if not set)
# OPENAI_DEFAULT_MODEL=gpt-4o-2024-05-13
# ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20240620
# GOOGLE_DEFAULT_MODEL=gemini-1.5-pro

# ============================================
# Verification Engine Configuration
# ============================================
# Hybrid scoring weights (must sum to 1.0)
SYMBOLIC_WEIGHT=0.7
SEMANTIC_WEIGHT=0.3

# Minimum score threshold for proof to be considered valid (0-100)
PASS_THRESHOLD=70.0

# ============================================
# Performance Tuning
# ============================================
# Maximum concurrent proof verifications
MAX_CONCURRENT_VERIFICATIONS=5

# Database connection pool size
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================
# Security Settings
# ============================================
# Enable/disable API key authentication
REQUIRE_API_KEY=true

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================
# Feature Flags
# ============================================
# Enable/disable specific features
# Note: Backend optional - frontend works without these
ENABLE_LLM_EVALUATION=true
ENABLE_SYMBOLIC_VERIFICATION=true
ENABLE_COST_TRACKING=true
ENABLE_OFFLINE_FALLBACK=true

# ============================================
# Development Settings
# ============================================
# Auto-reload on code changes (development only)
RELOAD=false

# Create database tables on startup (development only)
AUTO_CREATE_TABLES=true
